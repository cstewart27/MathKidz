<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB30F"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SubjectDifficultyAddition">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/addBackArrow"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:backgroundTint="#FFB30F"
                app:srcCompat="@drawable/arrow6"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <Space
            android:layout_width="160dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo1" />
        </LinearLayout>

    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/addDifTextView"
            android:layout_width="292dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/Addition"
            android:textColor="#000000"
            android:textSize="56sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/AddEasy"
            android:layout_width="296dp"
            android:layout_height="77dp"
            android:layout_marginVertical="20dp"
            android:backgroundTint="#3BCE4C"
            android:background="@drawable/round_btn"
            android:text="@string/easy"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/AddMedium"
            android:layout_width="296dp"
            android:layout_height="77dp"
            android:layout_marginVertical="20dp"
            android:backgroundTint="#EDF12A"
            android:background="@drawable/round_btn"
            android:text="@string/medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/AddHard"
            android:layout_width="296dp"
            android:layout_height="77dp"
            android:layout_marginVertical="20dp"
            android:backgroundTint="#E21D1D"
            android:background="@drawable/round_btn"
            android:text="@string/hard"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>

