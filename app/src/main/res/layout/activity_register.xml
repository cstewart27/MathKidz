<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB30F"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.math_kidz.math_kidz.Register">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:id="@+id/CreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="306dp"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/mailblue"
        android:drawableTint="#3943B7"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="306dp"
        android:layout_height="56dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/passwordblue"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="24sp"
        android:textStyle="bold"  />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="223dp"
        android:layout_height="44dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#3943B7"
        android:text="@string/Sign_Up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/divider" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:layout_weight="1"
            app:srcCompat="@drawable/divider" />

    </LinearLayout>

    <TextView
        android:id="@+id/textRegister2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have An Account?"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/textLogin"
        android:layout_width="223dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/hollow_btn_blue"
        android:text="@string/Sign_In"
        android:textColor="#3943B7"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>